INT N,I,M,A1

B(4).1=0 : B(4).2=1 : WAIT 500
B(4).2=0 : B(4).0=0
TAG A
SPD = 7000
FOR I=1 TO 10
	IF (B(10).0==1) : GOTO C : ENDI
	M=M+1
	I=I-1
ENDF
TAG C
B(10).0=0
N=M%4+2
MPTP P5
A1=GPNT(512).1
LOOP 1
	IF B(10).0==1
		B(10).0=0
		MINC<10,0>
	ENDI
	IF B(10).1==1
		B(10).1=0
		MINC<-10,0>
	ENDI
	IF GPNT(512).1>A1+100
		MPTP P6
		FOR I=1 TO N
			MCIR P8,P2
		ENDF
		GOTO G
	ENDI
	IF GPNT(512).1<A1-100
		MPTP P4
		FOR I=1 TO N
			MCIR P2,P8
		ENDF
		GOTO G
	ENDI
ENDL
TAG G
MPTP P5
GOTO A
MEND

